<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.ExpenseManagement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple_transparent</item>
        <item name="colorOnPrimary">@color/dark_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_yellow</item>
        <item name="colorSecondaryVariant">@color/dark_yellow_transparent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Color Background. -->
        <item name="android:colorBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="Theme.ExpenseManagement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="navigationTheme" parent="Widget.Design.NavigationView">
        <item name="itemBackground">@drawable/menu_item_state</item>
        <item name="itemTextColor">?attr/colorOnPrimary</item>
        <item name="itemIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/colorOnPrimary</item>
    </style>

    <style name="tabsTheme" parent="android:Widget">
        <item name="tabSelectedTextColor">?attr/colorSecondary</item>
        <item name="tabTextColor">?attr/colorSecondary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabIconTint">?attr/colorSecondary</item>
        <item name="tabBackground">@drawable/tab_state</item>
    </style>

    <style name="editTextTheme" parent="android:Widget.EditText">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_text_state</item>
    </style>

    <style name="spinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_state</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">?attr/colorSecondary</item>
    </style>

</resources>